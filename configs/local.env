# 本地开发环境配置
# 使用本地MySQL和Redis，避免Docker网络问题

# MySQL配置 (默认关闭，若需要请解除注释并填写完整)
# MYSQL_HOST=
# MYSQL_PORT=3306
# MYSQL_USER=
# MYSQL_PASSWORD=
# MYSQL_DATABASE=

# PostgreSQL配置（默认本地环境）
POSTGRESQL_HOST=localhost
POSTGRESQL_PORT=5432
POSTGRESQL_USER=postgres
POSTGRESQL_PASSWORD=
POSTGRESQL_DATABASE=zervigo_mvp
POSTGRESQL_SSL_MODE=disable
POSTGRES_DB=zervigo_mvp
POSTGRES_USER=postgres

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT配置
JWT_SECRET=zervigo-local-dev-secret-key-2025

# 服务端口配置
AUTH_SERVICE_PORT=8207
USER_SERVICE_PORT=8082
JOB_SERVICE_PORT=8084
RESUME_SERVICE_PORT=8085
COMPANY_SERVICE_PORT=8083
AI_SERVICE_PORT=8100
BLOCKCHAIN_SERVICE_PORT=8208
CENTRAL_BRAIN_PORT=9000
ROUTER_SERVICE_PORT=8087
PERMISSION_SERVICE_PORT=8086

# 环境配置
ENVIRONMENT=development
LOG_LEVEL=debug
DEBUG=true

# 服务发现配置
SERVICE_DISCOVERY_ENABLED=false
CONSUL_AGENT_URL=http://localhost:8500
SERVICE_HOST=localhost

# Central Brain服务凭证配置
SERVICE_ID=central-brain
SERVICE_SECRET=central-brain-secret-2025

# 数据库检查配置
DATABASE_CHECK_ENABLED=true
DATABASE_CHECK_REQUIRED=false  # false=可选，true=必需
DATABASE_CHECK_TIMEOUT=5
DATABASE_CHECK_RETRY_COUNT=3
DATABASE_CHECK_RETRY_DELAY=2

# 功能开关
AI_ENABLED=true
BLOCKCHAIN_ENABLED=true
METRICS_ENABLED=true
TOKEN_VALIDATION_ENABLED=true
